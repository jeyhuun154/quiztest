<body>
  <div class="quiz-container">
    <h1 id="question">Loading...</h1>
    <div class="options" id="options"></div>
    <p id="status"></p>
  </div>

  <script>
    const quiz = [
      {
        question: "Rule #1 says: Terrorist propaganda will result in?",
        answers: ["Warning", "Temp Ban", "Permanent Ban"],
        correct: 2
      },
      {
        question: "Which language must be used in <#1236645393048141854>?",
        answers: ["Turkish", "English", "Russian"],
        correct: 1
      },
      {
        question: "Are you allowed to share the verification code?",
        answers: ["Yes", "No"],
        correct: 1
      }
    ];

    let current = 0;

    const qEl = document.getElementById("question");
    const optionsEl = document.getElementById("options");
    const statusEl = document.getElementById("status");

    function loadQuestion() {
      const q = quiz[current];
      qEl.textContent = q.question;
      optionsEl.innerHTML = "";
      q.answers.forEach((ans, i) => {
        const btn = document.createElement("button");
        btn.textContent = ans;
        btn.onclick = () => checkAnswer(i);
        optionsEl.appendChild(btn);
      });
      statusEl.textContent = `Question ${current+1} of ${quiz.length}`;
    }

    function checkAnswer(choice) {
      if (choice === quiz[current].correct) {
        current++;
        if (current < quiz.length) {
          loadQuestion();
        } else {
          qEl.textContent = "✅ Verification Complete!";
          optionsEl.innerHTML = "<p>DM this code to staff: <b>VERIFIED-2025</b></p>";
          statusEl.textContent = "";
        }
      } else {
        // restart
        alert("❌ Wrong answer. Restarting test...");
        current = 0;
        loadQuestion();
      }
    }

    loadQuestion();
  </script>
</body>
</html>
